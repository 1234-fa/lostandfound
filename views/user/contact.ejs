    margin-top: 0.6rem;
    color: #007BFF;
    font-weight: 500;
  }

  .details {
    background: #fff;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 6px 25px rgba(0, 0, 0, 0.06);
    text-align: left;
  }

  .details h4 {
    font-size: 1.2rem;
    margin-bottom: 0.3rem;
    color: #222;
  }

  .details p {
    font-size: 0.95rem;
    line-height: 1.6;
    color: #555;
    margin-bottom: 1rem;
  }

  .timing {
    margin-top: 3rem;
    font-size: 1rem;
    font-weight: 500;
    color: #333;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .details {
      text-align: center;
    }

    .details h4 {
      margin-top: 1rem;
    }

    .map iframe {
      height: 250px;
    }
  }
</style>


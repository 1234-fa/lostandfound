<%- include('../../views/partials/user/header') %>

<style>
/* Enhanced styles for retry payment page */
#retry-payment-page {
  background: url('../background.png') no-repeat center center/cover;
  min-height: calc(100vh - 200px);
  padding: 40px 0;
  font-family: 'Roboto', Arial, sans-serif;
}

#retry-payment-page .payment-card {
  background: rgba(0, 0, 0, 0.98);
  backdrop-filter: blur(15px);
  border-radius: 15px;
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
  padding: 40px;
  max-width: 900px;
  margin: 0 auto;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

#retry-payment-page .order-summary {
  background: #ffffff;
  border-radius: 8px;
  padding: 20px;
  margin-bottom: 20px;
}

#retry-payment-page .product-item {
  display: flex;
  align-items: center;
  padding: 15px 0;
  border-bottom: 1px solid #eee;
}

#retry-payment-page .product-item:last-child {
  border-bottom: none;
}

#retry-payment-page .product-image {
  width: 80px;
  height: 80px;
  object-fit: cover;
  border-radius: 8px;
  margin-right: 15px;
}

#retry-payment-page .payment-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  color: white;
  padding: 15px 30px;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  width: 100%;
}

#retry-payment-page .payment-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

#retry-payment-page .retry-info {
  background: #fff3cd;
  border: 1px solid #ffeaa7;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 20px;
}

#retry-payment-page .price-breakdown {
  background: white;
  border-radius: 8px;
  padding: 20px;
  margin-top: 20px;
}

#retry-payment-page .price-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

#retry-payment-page .price-row.total {
  font-weight: bold;
  font-size: 18px;
  border-top: 2px solid #eee;
  padding-top: 10px;
  margin-top: 15px;
}
</style>

<!-- Use ID selector for complete isolation -->
<div id="retry-payment-page">
  <div class="container">
    <div class="payment-card">
      <div class="text-center mb-4">
        <h2 style="color: #ffffff;">Retry Payment</h2>
        <p style="color: #ffffff;">Complete your payment for Order #<%= order.orderId %></p>
      </div>

      <div class="retry-info">
        <h6><i class="fas fa-info-circle"></i> Payment Retry Information</h6>
        <p class="mb-1"><strong>Previous Attempts:</strong> <%= order.retryAttempts %></p>
        <p class="mb-1"><strong>Last Attempt:</strong> <%= order.lastPaymentAttempt ? order.lastPaymentAttempt.toLocaleString() : 'N/A' %></p>
        <% if (order.paymentFailureReason) { %>
          <p class="mb-0"><strong>Failure Reason:</strong> <%= order.paymentFailureReason %></p>
        <% } %>
      </div>

      <div class="order-summary">
        <h5 class="mb-3">Order Summary</h5>
        
        <% order.orderedItems.forEach(item => { %>
          <div class="product-item">
            <img src="<%= item.product.productImages[0] %>" alt="<%= item.product.productName %>" class="product-image">
            <div class="flex-grow-1">
              <h6 class="mb-1"><%= item.product.productName %></h6>
              <p class="text-muted mb-1">Size: <%= item.variant?.size || item.variant || 'Not selected' %></p>
              <p class="text-muted mb-0">Quantity: <%= item.quantity %></p>
            </div>
            <div class="text-end">
              <p class="mb-0 fw-bold">₹<%= (item.price * item.quantity).toFixed(2) %></p>
            </div>
          </div>
        <% }) %>
      </div>

      <div class="price-breakdown">
        <h6 class="mb-3">Price Breakdown</h6>
        <div class="price-row">
          <span>Subtotal:</span>
          <span>₹<%= order.totalPrice.toFixed(2) %></span>
        </div>
        <div class="price-row">
          <span>Discount:</span>
          <span class="text-success">-₹<%= order.discount.toFixed(2) %></span>
        </div>
        <div class="price-row">
          <span>Delivery Charge:</span>
          <span>₹<%= order.deliveryCharge.toFixed(2) %></span>
        </div>
        <div class="price-row total">
          <span>Total Amount:</span>
          <span class="text-primary">₹<%= order.finalAmount.toFixed(2) %></span>
        </div>
      </div>

      <div class="text-center mt-4">
        <button id="retryPaymentBtn" class="payment-btn">
          <i class="fas fa-credit-card me-2"></i>
          Retry Payment - ₹<%= order.finalAmount.toFixed(2) %>
        </button>
      </div>

      <div class="text-center mt-3">
        <a href="/view-orders" class="btn btn-outline-secondary me-2">
          <i class="fas fa-list me-2"></i>
          View All Orders
        </a>
        <a href="/order-failure?orderId=<%= order.orderId %>" class="btn btn-outline-secondary">
          <i class="fas fa-arrow-left me-2"></i>
          Back to Failure Page
        </a>
      </div>
    </div>
  </div>
</div>

<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
document.getElementById('retryPaymentBtn').addEventListener('click', function() {
  const options = {
    key: '<%= razorpayKey %>',
    amount: '<%= amount %>',
    currency: 'INR',
    name: 'STRUX LABEL',
    description: 'Retry Payment for Order #<%= order.orderId %>',
    order_id: '<%= razorpayOrderId %>',
    handler: function(response) {
      // Payment successful
      fetch('/verify-retry-payment', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          razorpay_order_id: response.razorpay_order_id,
          razorpay_payment_id: response.razorpay_payment_id,
          razorpay_signature: response.razorpay_signature,
          orderId: '<%= order.orderId %>'
        })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          window.location.href = data.redirect;
        } else {
          alert('Payment verification failed: ' + data.message);
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Payment verification failed');
      });
    },
    modal: {
      ondismiss: function() {
        console.log('Payment modal closed');
      }
    },
    theme: {
      color: '#667eea'
    }
  };

  const rzp = new Razorpay(options);
  rzp.open();
});
</script>

<%- include('../../views/partials/user/footer') %>

<%- include("../../views/partials/user/header") %>

<style>
/* Target only the main content area, not header/footer */
.order-success-main {
  font-family: Arial, sans-serif;
  background: url("../background.png") no-repeat center center/cover;
  min-height: calc(100vh - 200px); /* Adjust based on header/footer height */
  padding: 50px 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.order-success-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  backdrop-filter: blur(2px);
  -webkit-backdrop-filter: blur(2px);
  padding: 40px;
  border-radius: 12px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  max-width: 1000px;
  margin: auto;
  background: rgba(255, 255, 255, 0.1); /* Add slight background for blur effect */
}

.content {
  max-width: 60%;
}

.content h1 {
  color: green;
  font-size: 2.5rem;
  margin-bottom: 10px;
}

.content p {
  font-size: 1.2rem;
  color: #333;
  margin-bottom: 25px;
}

.buttons a {
  text-decoration: none;
  padding: 10px 20px;
  border-radius: 6px;
  font-size: 1rem;
  margin-right: 15px;
  transition: background 0.3s;
}

.buttons .continue {
  background-color: #28a745;
  color: white;
}

.buttons .continue:hover {
  background-color: #218838;
}

.buttons .view {
  background-color: #007bff;
  color: white;
}

.buttons .view:hover {
  background-color: #0069d9;
}

.image-container {
  max-width: 35%;
}

.image-container img {
  width: 100%;
  height: auto;
  border-radius: 8px;
}
</style>

<!-- Main content section -->
<main class="order-success-main">
  <div class="order-success-container">
    <div class="content">
      <h1>Congratulations!</h1>
      <p>Your order has been placed successfully.</p>
      <p>Your order is confirmed and will be delivered very soon..</p>
      <div class="buttons">
        <a href="/shop" class="continue">Continue Shopping</a>
        <a href="/view-orders" class="view">View Orders</a>
      </div>
    </div>
    <div class="image-container">
      <img src="/img/logo.png" alt="Order Success">
    </div>
  </div>
</main>

<%- include("../../views/partials/user/footer") %>
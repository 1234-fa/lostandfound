<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>STRUX LABEL</title>
    <meta name="description" content="STRUX LABEL Web App" />

    <!-- Favicon -->
    <link rel="shortcut icon" href="#" type="image/x-icon" />

    <!-- Fonts and Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.css" />
    <script src="https://kit.fontawesome.com/16d4885483.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <!-- CSS Stylesheets -->
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/font-awesome.min.css" />
    <link rel="stylesheet" href="css/elegant-icons.css" />
    <link rel="stylesheet" href="css/magnific-popup.css" />
    <link rel="stylesheet" href="css/nice-select.css" />
    <link rel="stylesheet" href="css/owl.carousel.min.css" />
    <link rel="stylesheet" href="css/slicknav.min.css" />
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="/admin-assets/css/main.css" />

    <style>
    body {
        background-color: #ffffff;
    }

    .navbar,
    .navbar-aside {
        background-color: white;
    }

    .menu-item a.menu-link {
        color: #310505;
    }

    .menu-item a.menu-link:hover,
    .menu-item a.menu-link.active {
        background-color: #6e7e6e;
        color: #ffffff;
    }

    .dropdown-menu {
        background-color: #bb9aaf;
    }

    .dropdown-item:hover {
        background-color: #33053d;
        color: #ffffff;
    }

    /* Sidebar default style */
    #offcanvas_aside {
        position: fixed;
        top: 0;
        left: 0;
        width: 260px;
        height: 100%;
        background-color: white;
        z-index: 1050;
        transition: left 0.3s ease;
    }

    /* Overlay */
    .screen-overlay {
        position: fixed;
        display: none;
        width: 100%;
        height: 100%;
        z-index: 1040;
        top: 0;
        left: 0;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .screen-overlay.show {
        display: block;
    }

    /* Sidebar toggle button */
    .btn-mobile {
        display: none;
    }

    /* On small screens: hide sidebar by default, show with toggle */
    @media (max-width: 768px) {
        #offcanvas_aside {
            left: -260px;
        }

        #offcanvas_aside.show {
            left: 0;
        }

        .btn-mobile {
            display: inline-block;
        }
    }

    /* Main content should have margin-left on large screens */
    @media (min-width: 769px) {
        .main-wrap {
            margin-left: 260px;
        }

        .screen-overlay {
            display: none !important;
        }
    }
</style>
</head>

<body>
    <div class="screen-overlay"></div>

    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top d-flex justify-content-between align-items-center">
            <a href="/" class="brand-wrap d-flex align-items-center text-decoration-none">
                <div style="width: 32px; height: 32px; overflow: hidden; border-radius: 6px; display: flex; align-items: center; justify-content: center; margin-right: 4px;">
                    <img src="/img/logo.png" alt="Logo" style="width: 100%; height: auto;" />
                </div>
                <span style="font-size: 14px; color: black;">STRUX LABEL</span>
            </a>
            <button class="btn btn-icon btn-aside-minimize d-none d-md-block">
                <i class="text-muted material-icons md-menu"></i>
            </button>
        </div>

        <nav>
            <ul class="menu-aside">
                <li class="menu-item"><a class="menu-link" href="/view-orders"><i class="icon material-icons md-work"></i><span class="text">My Orders</span></a></li>
                <li class="menu-item"><a class="menu-link" href="/userProfile"><i class="icon material-icons md-swap_calls"></i><span class="text">Profile Information</span></a></li>
                <li class="menu-item"><a class="menu-link" href="/address"><i class="icon material-icons md-house"></i><span class="text">Manage Address</span></a></li>
                <!-- <li class="menu-item"><a class="menu-link" href="/myCoupens"><i class="icon material-icons md-class"></i><span class="text">My Coupons</span></a></li> -->
                <li class="menu-item"><a class="menu-link" href="/wallet"><i class="icon material-icons md-account_balance_wallet"></i><span class="text">My Wallet</span></a></li>
                <li class="menu-item"><a class="menu-link" href="/logout"><i class="icon material-icons md-exit_to_app"></i><span class="text">Logout</span></a></li>
            </ul>
        </nav>
    </aside>

    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search"></div>
            <div class="col-nav">
                <!-- Hamburger Button for Small Screens -->
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside">
                    <i class="fas fa-bars"></i>
                </button>
                <ul class="nav">
                    <li class="dropdown nav-item">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#" id="dropdownAccount" aria-expanded="false">
                            <img class="img-xs rounded-circle" src="/img/adminimg.png" alt="User" />
                        </a>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownAccount">
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="/logout"><i class="material-icons md-exit_to_app"></i>Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </header>
    </main>

    <!-- JS to toggle sidebar -->
    <script>
        $(document).ready(function () {
            $('[data-trigger="#offcanvas_aside"]').on("click", function () {
                $('#offcanvas_aside').toggleClass("show");
                $('.screen-overlay').toggleClass("show");
            });

            $(".screen-overlay").on("click", function () {
                $('#offcanvas_aside').removeClass("show");
                $(this).removeClass("show");
            });
        });
    </script>
</body>

</html>
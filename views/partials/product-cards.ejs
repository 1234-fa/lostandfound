<% for(let i=0; i<products.length; i++){ %>
    <div class="product-card">
      <span class="wishlist-btn" onclick=""></span>
      <a href="/productDetails?id=<%=products[i]._id%>">
        <img src="/uploads/re-image/<%=products[i].productImages[0] %>" alt="<%= products[i].productName %>" />
        <h4><%=products[i].productName%></h4>
        <p><%=products[i].brand%></p>
        <p>₹<%=products[i].salePrice.toLocaleString('en-IN')%> <span class="text-muted"><strike>₹<%=products[i].regularPrice%></strike></span></p>
      </a>
      <button class="add-to-cart-btn" onclick="">Add to Cart</button>
    </div>
  <% } %>v